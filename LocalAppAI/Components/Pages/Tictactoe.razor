@page "/tictac"

<div class="tictactoe-main-container">
    <div class="game-section">
        <div class="tictactoe-container">
            <h2 class="game-title">Tic-Tac-Toe vs AI</h2>
            
            @if (!string.IsNullOrEmpty(aiStatus))
            {
                <div class="ai-status">
                    <i class="fas fa-robot"></i> @aiStatus
                </div>
            }

            <div class="game-info">
                <p class="current-player">Current Player: 
                    @if (isCircleTurn)
                    {
                        <span>You <i class="fas fa-circle player-circle"></i></span>
                    }
                    else
                    {
                        <span>AI <i class="fas fa-times player-x"></i></span>
                    }
                </p>
            </div>

            @if (!string.IsNullOrEmpty(gameMessage))
            {
                <div class="game-message @(gameMessage.Contains("wins") || gameMessage.Contains("win") ? "winner-message" : "")">
                    @gameMessage
                </div>
            }

            <div class="game-board">
                @for (int i = 0; i < 9; i++)
                {
                    int index = i;
                    <div class="cell @(IsWinningCell(index) ? "winning-cell" : "") @(isAIThinking ? "disabled" : "")" 
                         @onclick="() => HandleCellClick(index)">
                        @if (board[index] == "O")
                        {
                            <i class="fas fa-circle player-circle"></i>
                        }
                        else if (board[index] == "X")
                        {
                            <i class="fas fa-times player-x"></i>
                        }
                        else if (isAIThinking)
                        {
                            <div class="cell-thinking"></div>
                        }
                    </div>
                }
            </div>

            <button class="btn btn-primary reset-btn" @onclick="ResetGame">
                <i class="fas fa-redo"></i> Reset Game
            </button>
        </div>
    </div>

    <div class="chat-log-section">
        <div class="chat-log-container">
            <h3 class="chat-log-title">
                <i class="fas fa-comments"></i> AI Chat Log
            </h3>
            <div class="chat-log-messages">
                @foreach (var entry in chatLog)
                {
                    <div class="chat-entry @entry.Role.ToLower()">
                        <div class="chat-header">
                            <span class="chat-role">
                                @if (entry.Role == "System")
                                {
                                    <i class="fas fa-cog"></i>
                                }
                                else if (entry.Role == "AI")
                                {
                                    <i class="fas fa-robot"></i>
                                }
                                else
                                {
                                    <i class="fas fa-user"></i>
                                }
                                @entry.Role
                            </span>
                            <span class="chat-time">@entry.Timestamp.ToString("HH:mm:ss")</span>
                        </div>
                        <div class="chat-message">@entry.Message</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .tictactoe-main-container {
        display: flex;
        max-width: 1200px;
        margin: 20px auto;
        gap: 20px;
        padding: 20px;
        flex-wrap: wrap;
    }

    .game-section {
        flex: 1;
        min-width: 300px;
    }

    .chat-log-section {
        flex: 1;
        min-width: 300px;
        max-width: 500px;
    }

    .tictactoe-container {
        text-align: center;
        padding: 20px;
    }

    .game-title {
        color: #333;
        margin-bottom: 20px;
        font-size: 2rem;
    }

    .ai-status {
        background-color: #e3f2fd;
        padding: 10px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        color: #1976d2;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .ai-status i {
        margin-right: 8px;
    }

    .game-info {
        margin-bottom: 20px;
    }

    .current-player {
        font-size: 1.3rem;
        font-weight: bold;
        color: #444;
    }

    .current-player span {
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .game-message {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        font-size: 1.2rem;
        font-weight: bold;
        background-color: #f0f0f0;
        color: #333;
    }

    .winner-message {
        background-color: #ffd700;
        color: #333;
        animation: pulse 0.5s ease-in-out;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .game-board {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(3, 1fr);
        gap: 10px;
        max-width: 450px;
        margin: 0 auto 30px;
        background-color: #333;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .cell {
        background-color: white;
        aspect-ratio: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 4rem;
        cursor: pointer;
        border-radius: 8px;
        transition: all 0.3s ease;
        position: relative;
    }

    .cell:hover:not(.disabled) {
        background-color: #f0f0f0;
        transform: scale(1.05);
    }

    .cell.disabled {
        cursor: not-allowed;
        opacity: 0.7;
    }

    .cell-thinking {
        width: 30px;
        height: 30px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #1976d2;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .cell i {
        animation: fadeIn 0.3s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.5);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .winning-cell {
        background-color: #ffffcc !important;
        animation: winningPulse 0.6s ease-in-out infinite;
    }

    @@keyframes winningPulse {
        0%, 100% { 
            background-color: #ffffcc;
        }
        50% { 
            background-color: #ffff99;
        }
    }

    .player-circle {
        color: #28a745;
    }

    .player-x {
        color: #dc3545;
    }

    .reset-btn {
        font-size: 1.1rem;
        padding: 12px 30px;
        border-radius: 8px;
    }

    .reset-btn i {
        margin-right: 8px;
    }

    /* Chat Log Styles */
    .chat-log-container {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        height: 600px;
        display: flex;
        flex-direction: column;
    }

    .chat-log-title {
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 2px solid #dee2e6;
    }

    .chat-log-title i {
        color: #1976d2;
        margin-right: 8px;
    }

    .chat-log-messages {
        flex: 1;
        overflow-y: auto;
        padding-right: 10px;
    }

    .chat-log-messages::-webkit-scrollbar {
        width: 8px;
    }

    .chat-log-messages::-webkit-scrollbar-track {
        background: #e9ecef;
        border-radius: 10px;
    }

    .chat-log-messages::-webkit-scrollbar-thumb {
        background: #adb5bd;
        border-radius: 10px;
    }

    .chat-log-messages::-webkit-scrollbar-thumb:hover {
        background: #6c757d;
    }

    .chat-entry {
        margin-bottom: 15px;
        padding: 12px;
        border-radius: 8px;
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .chat-entry.system {
        background-color: #fff3cd;
        border-left: 4px solid #ffc107;
    }

    .chat-entry.user {
        background-color: #d1ecf1;
        border-left: 4px solid #17a2b8;
    }

    .chat-entry.ai {
        background-color: #d4edda;
        border-left: 4px solid #28a745;
    }

    .chat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .chat-role {
        font-weight: bold;
        color: #495057;
    }

    .chat-role i {
        margin-right: 5px;
    }

    .chat-time {
        color: #6c757d;
        font-size: 0.85rem;
    }

    .chat-message {
        color: #212529;
        white-space: pre-wrap;
        word-wrap: break-word;
        font-size: 0.95rem;
        line-height: 1.4;
    }

    @@media (max-width: 900px) {
        .tictactoe-main-container {
            flex-direction: column;
        }

        .chat-log-section {
            max-width: 100%;
        }

        .chat-log-container {
            height: 400px;
        }

        .game-board {
            max-width: 350px;
        }

        .cell {
            font-size: 3rem;
        }

        .game-title {
            font-size: 1.5rem;
        }

        .current-player {
            font-size: 1.1rem;
        }

        .ai-status {
            font-size: 1rem;
            padding: 8px 15px;
        }
    }
</style>
